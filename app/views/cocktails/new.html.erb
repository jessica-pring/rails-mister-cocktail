<div class="container c-form">
  <h2>Create a new cocktail</h2>

  <%= simple_form_for(@cocktail) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
    </div>

    <div class="form-actions btn">
      <%= f.button :submit, class: "btn text-white" %>
    </div>
  <% end %>

</div>
